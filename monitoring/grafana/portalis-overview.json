{
  "dashboard": {
    "id": null,
    "uid": "portalis-overview",
    "title": "Portalis - System Overview",
    "tags": ["portalis", "overview", "system-health"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 1
        },
        "type": "row",
        "title": "System Health"
      },
      {
        "id": 2,
        "gridPos": {
          "x": 0,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "type": "stat",
        "title": "Translation Success Rate",
        "targets": [
          {
            "expr": "sum(rate(portalis_translations_success_total[5m])) / sum(rate(portalis_translations_total[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "x": 6,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "type": "stat",
        "title": "Translations (Last Hour)",
        "targets": [
          {
            "expr": "sum(increase(portalis_translations_total[1h]))",
            "legendFormat": "Total Translations",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "x": 12,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "type": "stat",
        "title": "Active Pipelines",
        "targets": [
          {
            "expr": "portalis_pipelines_active",
            "legendFormat": "Active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {
          "x": 18,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(portalis_errors_total[5m]))",
            "legendFormat": "Errors/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {
          "x": 0,
          "y": 5,
          "w": 24,
          "h": 1
        },
        "type": "row",
        "title": "Translation Pipeline"
      },
      {
        "id": 11,
        "gridPos": {
          "x": 0,
          "y": 6,
          "w": 12,
          "h": 8
        },
        "type": "timeseries",
        "title": "Translation Rate",
        "targets": [
          {
            "expr": "sum(rate(portalis_translations_total[1m])) by (source_language)",
            "legendFormat": "{{source_language}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 12,
        "gridPos": {
          "x": 12,
          "y": 6,
          "w": 12,
          "h": 8
        },
        "type": "timeseries",
        "title": "Success vs Failure",
        "targets": [
          {
            "expr": "sum(rate(portalis_translations_success_total[1m]))",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(portalis_translations_failed_total[1m]))",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Failed"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        }
      },
      {
        "id": 20,
        "gridPos": {
          "x": 0,
          "y": 14,
          "w": 24,
          "h": 1
        },
        "type": "row",
        "title": "Agent Performance"
      },
      {
        "id": 21,
        "gridPos": {
          "x": 0,
          "y": 15,
          "w": 12,
          "h": 8
        },
        "type": "timeseries",
        "title": "Agent Execution Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(portalis_agent_execution_duration_seconds_bucket[5m])) by (agent_name, le))",
            "legendFormat": "{{agent_name}} (P95)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0
            }
          }
        }
      },
      {
        "id": 22,
        "gridPos": {
          "x": 12,
          "y": 15,
          "w": 12,
          "h": 8
        },
        "type": "bargauge",
        "title": "Active Agents by Type",
        "targets": [
          {
            "expr": "sum(portalis_agents_active) by (agent_type)",
            "legendFormat": "{{agent_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 30,
        "gridPos": {
          "x": 0,
          "y": 23,
          "w": 24,
          "h": 1
        },
        "type": "row",
        "title": "Resource Utilization"
      },
      {
        "id": 31,
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 8,
          "h": 6
        },
        "type": "gauge",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "portalis_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 32,
        "gridPos": {
          "x": 8,
          "y": 24,
          "w": 8,
          "h": 6
        },
        "type": "gauge",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "portalis_memory_usage_bytes / (1024*1024*1024)",
            "legendFormat": "Memory GB",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 12, "color": "yellow"},
                {"value": 14, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 33,
        "gridPos": {
          "x": 16,
          "y": 24,
          "w": 8,
          "h": 6
        },
        "type": "gauge",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "sum(rate(portalis_cache_hits_total[5m])) / (sum(rate(portalis_cache_hits_total[5m])) + sum(rate(portalis_cache_misses_total[5m]))) * 100",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 30, "color": "yellow"},
                {"value": 60, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 40,
        "gridPos": {
          "x": 0,
          "y": 30,
          "w": 24,
          "h": 1
        },
        "type": "row",
        "title": "WASM Performance"
      },
      {
        "id": 41,
        "gridPos": {
          "x": 0,
          "y": 31,
          "w": 12,
          "h": 7
        },
        "type": "timeseries",
        "title": "WASM Compilation Time",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(portalis_wasm_compile_duration_seconds_bucket[5m])) by (optimization_level, le))",
            "legendFormat": "{{optimization_level}} (P95)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 42,
        "gridPos": {
          "x": 12,
          "y": 31,
          "w": 12,
          "h": 7
        },
        "type": "timeseries",
        "title": "WASM Binary Size",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(portalis_wasm_binary_size_bytes_bucket[5m])) by (optimization_level, le))",
            "legendFormat": "{{optimization_level}} (P95)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes",
            "custom": {
              "lineWidth": 2
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "label": "Data Source",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "prometheus"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Portalis.*\"}",
          "name": "Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
